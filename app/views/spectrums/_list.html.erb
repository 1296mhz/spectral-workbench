<table id="list">
  <tr>
    <th>Image</th>
    <th>Title</th>
    <th>Author</th>
    <th>Notes</th>
    <th>Actions</th>
  </tr>

<% @spectrums.each do |spectrum| %>
  <tr>
    <% if spectrum.photo.exists? then %>
	<td><a href="/spectrums/show/<%= spectrum.id %>"><%= image_tag spectrum.photo.url(:thumb) %></a></td>
    <% end %>
    <td><%=h spectrum.title %></td>
    <td><%=h spectrum.author %></td>
    <td><%=h spectrum.notes %></td>
    <td><%= link_to 'Show', spectrum %> 
    <a href="/spectrums/detail/<%= spectrum.id %>">Detail</a> 
    <%= link_to 'Edit', edit_spectrum_path(spectrum) %> 
  </tr>
<% end %>
</table>
