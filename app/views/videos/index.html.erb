<h1>Listing videos</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Set</th>
    <th>Data</th>
    <th>Notes</th>
    <th>Version</th>
    <th>Parent</th>
    <th>Video file name</th>
    <th>Video content type</th>
    <th>Video file size</th>
    <th>Video position</th>
  </tr>

<% @videos.each do |video| %>
  <tr>
    <td><%=h video.title %></td>
    <td><%=h video.author %></td>
    <td><%=h video.set %></td>
    <td><%=h video.data %></td>
    <td><%=h video.notes %></td>
    <td><%=h video.version %></td>
    <td><%=h video.parent_id %></td>
    <td><%=h video.video_file_name %></td>
    <td><%=h video.video_content_type %></td>
    <td><%=h video.video_file_size %></td>
    <td><%=h video.video_position %></td>
    <td><%= link_to 'Show', video %></td>
    <td><%= link_to 'Edit', edit_video_path(video) %></td>
    <td><%= link_to 'Destroy', video, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New video', new_video_path %>