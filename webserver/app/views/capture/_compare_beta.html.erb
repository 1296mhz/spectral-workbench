<h3>Compare your live feed with existing spectra</h3>

<div>

  <form id="search_form" action="javascript:void(0);" method='get'>
    <input id='search_term' class='text' type='text' name='q' value=''/>
    <a class="btn btn-large btn-primary" onClick="$('#search_form').submit()">Search</a>
    <a class="btn btn-large" href="#capture" data-toggle="tab">&laquo; Back</a>
    <% if logged_in? %>
      <label rel="tooltip" title="Subtract this from live feed" class="checkbox inline">
        <input type="checkbox" id="baseline-toggle" name="baseline-toggle" /> Vertical
      </label>
    <% end %>
  </form>

  <div id="results">
    <h3>Recent spectra (<a href="javascript:void()" id="refresh_recent">refresh</a>)</h3>
    <%= render :partial => "results" %>  
  </div>

  <style>
    .spectrum {
      float:left;
    }
  </style>

  <script> 
    $('#search_form').submit(function() {
      $('#results').load("/spectra/search/"+$('#search_term').val()+"?capture=true&beta=true")
    })
    $('#refresh_recent').click(function() {
      $('#results').load("/spectra/recent/?capture=true&beta=true")
    })
  </script>

</div>
